<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:startColor="#919295" android:endColor="#919295" />
            <size android:height="25dp" android:width="80dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="0" android:startColor="#919295" android:endColor="#919295" />
            <size android:height="25dp" android:width="80dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- View未点击时初始化颜色-->
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="0" android:startColor="#4E4F51" android:endColor="#4E4F51"/>
            <size android:height="25dp" android:width="80dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:startColor="#4E4F51" android:endColor="#4E4F51"/>
            <size android:height="25dp" android:width="80dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>