<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:startColor="#5FB1E1" android:endColor="#4886AB"/>
            <size android:height="18dp" android:width="30dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- View未点击时初始化颜色-->
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="0" android:startColor="#1B2838" android:endColor="#1B2838"/>
            <size android:height="18dp" android:width="30dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="0" android:startColor="#5FB1E1" android:endColor="#4886AB" />
            <size android:height="18dp" android:width="30dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:startColor="#1B2838" android:endColor="#1B2838"/>
            <size android:height="18dp" android:width="30dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>